# Service Configuration
SERVICE_NAME=push-service
SERVICE_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/push_db

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE=push.queue
RABBITMQ_EXCHANGE=notifications.direct
RABBITMQ_ROUTING_KEY=push
RABBITMQ_DLX_EXCHANGE=notifications.dlx
RABBITMQ_DLX_ROUTING_KEY=failed.push
RABBITMQ_PREFETCH_COUNT=10

# External Services
USER_SERVICE_URL=http://localhost:8001
TEMPLATE_SERVICE_URL=http://localhost:8002
API_GATEWAY_URL=http://localhost:3000

# Push Provider Configuration
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_API_URL=https://fcm.googleapis.com/fcm/send

# OneSignal Configuration (Optional)
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=
ONESIGNAL_API_URL=https://onesignal.com/api/v1/notifications

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_TIMEOUT=60

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_MIN_WAIT=2
RETRY_MAX_WAIT=10
