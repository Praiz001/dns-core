# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and update values
# DO NOT commit .env to version control!

# Django Settings
SECRET_KEY=your-production-secret-key-change-this
DEBUG=False
# ALLOWED_HOSTS: Use '*' to allow all hosts, or specify domains: 'domain.com,api.domain.com'
ALLOWED_HOSTS=*
ALLOW_TEST_NOTIFICATION_ENDPOINT=False

# Database - PostgreSQL (Production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=user_service_db
DB_USER=postgres
DB_PASSWORD=strong_password_here
# If running with docker-compose, set DB_HOST=db; for managed Postgres, set the cloud host
DB_HOST=db
DB_PORT=5432

# Redis Cache (Production)
# If running with docker-compose, set REDIS_HOST=redis; for managed Redis, set the cloud host
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_TTL=3600

# RabbitMQ
# If running with docker-compose, set RABBITMQ_HOST=rabbitmq; for managed RabbitMQ/CloudAMQP use host and set RABBITMQ_USE_SSL=True
RABBITMQ_HOST=rabbitmq
RABBITMQ_USE_SSL=False
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Settings (in minutes: 48 hours = 2880 minutes)
JWT_ACCESS_TOKEN_LIFETIME=2880

# Email Service
EMAIL_SERVICE_URL=http://email-service:8002

# CORS (Replace with your actual frontend domain)
CORS_ALLOWED_ORIGINS=https://your-actual-domain.com,https://www.your-actual-domain.com
