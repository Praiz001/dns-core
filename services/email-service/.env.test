# Test Environment Variables
DATABASE_URL=postgresql+asyncpg://test:test@localhost:5432/email_test
REDIS_URL=redis://localhost:6379/1
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# External Services
USER_SERVICE_URL=http://localhost:8001
TEMPLATE_SERVICE_URL=http://localhost:8002
API_GATEWAY_URL=http://localhost:8000

# Email Configuration
EMAIL_FROM_ADDRESS=test@example.com
EMAIL_FROM_NAME=Test System
EMAIL_PROVIDER=smtp

# SMTP Configuration (for tests)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# SendGrid (optional for tests)
SENDGRID_API_KEY=test-key

# Circuit Breaker
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_TIMEOUT=60

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_MULTIPLIER=1
RETRY_MIN_WAIT=1
RETRY_MAX_WAIT=10

# Cache TTL
CACHE_TTL_PREFERENCES=300

# HTTP Client
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=email_notifications
RABBITMQ_DLQ=email_notifications_dlq

# Test flag
RUN_E2E_TESTS=false
