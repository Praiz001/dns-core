# Email Service Environment Variables

# Application
ENVIRONMENT=development
SERVICE_NAME=email-service
LOG_LEVEL=INFO
CORS_ORIGINS=*

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/email_service_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EMAIL_QUEUE=email.queue
RABBITMQ_DLQ=failed.email.dlq
RABBITMQ_PREFETCH_COUNT=10
RABBITMQ_RETRY_DELAY=5000

# External Services
USER_SERVICE_URL=http://localhost:8001
TEMPLATE_SERVICE_URL=http://localhost:8002
API_GATEWAY_URL=http://localhost:3000

# Email Provider (smtp or sendgrid)
EMAIL_PROVIDER=smtp
EMAIL_FROM_ADDRESS=notifications@example.com
EMAIL_FROM_NAME=Notification System

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SendGrid Configuration (if using sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_MULTIPLIER=2
RETRY_MIN_WAIT=1
RETRY_MAX_WAIT=10

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_TIMEOUT=60

# HTTP Client Configuration
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3
